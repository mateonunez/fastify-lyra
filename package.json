{
  "name": "fastify-lyra",
  "version": "0.2.2",
  "description": "Fastify Lyra connection and management library",
  "main": "index.js",
  "types": "index.d.ts",
  "author": {
    "name": "Mateo Nunez",
    "email": "mateonunez95@gmail.com",
    "url": "http://github.com/mateonunez"
  },
  "scripts": {
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix | snazzy",
    "test": "npm run lint && npm run unit && npm run typescript",
    "test:ci": "tap --coverage-report=lcov test/*.test.js && npm run typescript",
    "typescript": "tsd",
    "prepare": "husky install",
    "unit": "tap test/*.test.js",
    "unit:report": "tap test/test.js --cov --coverage-report=html --coverage-report=cobertura",
    "unit:verbose": "tap test/test.js -Rspec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateonunez/fastify-lyra.git"
  },
  "keywords": [
    "fastify",
    "lyra",
    "database",
    "search",
    "engine"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mateonunez/fastify-lyra/issues"
  },
  "homepage": "https://github.com/mateonunez/fastify-lyra#readme",
  "dependencies": {
    "@lyrasearch/lyra": "^0.4.1",
    "fastify-plugin": "^4.4.0"
  },
  "devDependencies": {
    "@lyrasearch/plugin-data-persistence": "^0.0.4",
    "@types/node": "^18.11.17",
    "fastify": "^4.10.2",
    "husky": "^8.0.2",
    "snazzy": "^9.0.0",
    "standard": "^17.0.0",
    "tap": "^16.3.2",
    "tsd": "^0.25.0",
    "typescript": "^4.9.4"
  },
  "publishConfig": {
